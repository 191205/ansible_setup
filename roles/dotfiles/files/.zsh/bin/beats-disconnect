#!/usr/bin/osascript
activate application "SystemUIServer"
tell application "System Events"
  tell process "SystemUIServer"
    set btMenu to (menu bar item 1 of menu bar 1 whose description contains "bluetooth")
    tell btMenu
      click
      tell (menu item "Beats Solo³ tilhørende Mike Jakobsen" of menu 1)
        click
        if exists menu item "Afbryd forbindelsen" of menu 1 then
          click menu item "Afbryd forbindelsen" of menu 1
          return "Afbryder..."
        else
          click btMenu
          return "Dine Beats er ikke tilsluttet"
        end if
      end tell
    end tell
  end tell
end tell
