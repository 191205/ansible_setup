[alias]
	abbrev = !sh -c 'git rev-parse --short ${1-`echo HEAD`}' -
	amend = commit --amend -v
	both = diff HEAD
	br = branch
	ci = commit -v
	co = checkout

	# http://stackoverflow.com/questions/224687/git-find-duplicate-blobs-files-in-this-tree/8408640#8408640
	dupes = !"git ls-tree -r HEAD | cut -c 13- | sort | uniq -D -w 40"

	# requires Git 1.6.3 or later
	graph = log --oneline --graph

	# requires Git 1.6.3 or later
	oneline = log --oneline

	# requires Git 1.5.4 or later
	patch = add -p

	refresh = !ssh-add -l && STASH=$(git stash) && git fetch && git rebase origin/master && test \"$STASH\" != \"No local changes to save\" && git stash pop

	# requires Git 1.7.11.3 or later
	reword = commit --amend --only -v --

	st = status
	staged = diff --cached

[branch "master"]
	rebase = true

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	pager = less -FRSX

[difftool]
	prompt = false

[help]
	autocorrect = 10

[log]
	decorate = short

[merge]
	log = 1000

[pager]
	show-branch = true
	status = true

[push]
	# requires Git 1.7.5 or later
	default = upstream

[rebase]
	autosquash = true

[rerere]
	enabled = true

# ignored by Git older than 1.7.10
[include]
	path = .gitconfig.local
