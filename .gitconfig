[alias]
	abbrev = !sh -c 'git rev-parse --short ${1-`echo HEAD`}' -
	amend = commit --amend
	both = diff HEAD
	br = branch
	ci = commit -v
	co = checkout
	graph = log --oneline --graph
	oneline = log --oneline
	patch = add --patch
	st = status
	staged = diff --cached
[branch "master"]
	rebase = true
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
	pager = less -FRSX
[difftool]
	prompt = false
[help]
	autocorrect = 10
[log]
	decorate = short
[merge]
	log = 1000
[pager]
	show-branch = true
	status = true
[push]
	default = upstream
[rebase]
	autosquash = true
[rerere]
	enabled = true
[include]
	path = .gitconfig.local
