config defaultToCurrentScreen true

# Monitor Aliases
alias internal          1440x900
alias cinema            2560x1440

# App Aliases
alias adium             'Adium':IGNORE_FAIL,TITLE_ORDER_REGEX=Contact,REPEAT_LAST
alias canary            'Google Chrome Canary':REPEAT_LAST
alias chrome            'Google Chrome':REPEAT_LAST
alias skype             'Skype'
alias term              'iTerm':REPEAT_LAST
alias textual           'Textual'

# Position Aliases
alias full              move                    screenOriginX;screenOriginY screenSizeX;screenSizeY

# halves
alias top               push up                 bar-resize:screenSizeY/2
alias right             push right              bar-resize:screenSizeX/2
alias bottom            push down               bar-resize:screenSizeY/2
alias left              push left               bar-resize:screenSizeX/2

# thirds
alias small-top         push up                 bar-resize:screenSizeY/3
alias small-right       push right              bar-resize:screenSizeX/3
alias small-bottom      push down               bar-resize:screenSizeY/3
alias small-left        push left               bar-resize:screenSizeX/3

# two thirds
alias big-top           push up                 bar-resize:2*screenSizeY/3
alias big-right         push right              bar-resize:2*screenSizeX/3
alias big-bottom        push down               bar-resize:2*screenSizeY/3
alias big-left          push left               bar-resize:2*screenSizeX/3

# corners
alias top-right         corner top-right        resize:screenSizeX/2;screenSizeY/2
alias bottom-right      corner bottom-right     resize:screenSizeX/2;screenSizeY/2
alias bottom-left       corner bottom-left      resize:screenSizeX/2;screenSizeY/2
alias top-left          corner top-left         resize:screenSizeX/2;screenSizeY/2

# centered
alias small-center      move                    screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/3 screenSizeX/3;screenSizeY/3
alias big-center        move                    screenOriginX+screenSizeX/4;screenOriginY+screenSizeY/4 screenSizeX/2;screenSizeY/2

# Move Bindings
bind                    down:ctrl;alt;cmd       chain ${full} | ${big-center} | ${small-center} | ${full} next | ${big-center} next | ${small-center} next

# Push Bindings
bind                    up:ctrl;alt             chain ${top} | ${small-top} | ${big-top} | ${top} next | ${small-top} next | ${big-top} next
bind                    right:ctrl;alt          chain ${right} | ${small-right} | ${big-right} | ${right} next | ${small-right} next | ${big-right} next
bind                    down:ctrl;alt           chain ${bottom} | ${small-bottom} | ${big-bottom} | ${bottom} next | ${small-bottom} next | ${big-bottom} next
bind                    left:ctrl;alt           chain ${left} | ${small-left} | ${big-left} | ${left} next | ${small-left} next | ${big-left} next

# Corner Bindings
bind                    up:ctrl;alt;cmd         chain ${top-left} | ${top-right} | ${bottom-right} | ${bottom-left} | ${top-left} next | ${top-right} next | ${bottom-right} next | ${bottom-left} next

# Layouts
layout                  one-monitor             ${adium}    throw ${internal} | ${big-center} ${internal}
layout                  one-monitor             ${canary}   ${full} ${internal}
layout                  one-monitor             ${chrome}   ${full} ${internal}
layout                  one-monitor             ${skype}    ${right} ${internal}
layout                  one-monitor             ${term}     ${full} ${internal}
layout                  one-monitor             ${textual}  ${full} ${internal}

layout                  two-monitors            ${adium}    throw ${cinema} | ${big-center} ${cinema}
layout                  two-monitors            ${canary}   ${right} ${cinema}
layout                  two-monitors            ${chrome}   ${right} ${cinema}
layout                  two-monitors            ${skype}    ${right} ${internal}
layout                  two-monitors            ${term}     ${left} ${cinema}
layout                  two-monitors            ${textual}  ${full} ${internal}

# for testing layouts
bind f1:ctrl;alt;cmd layout one-monitor
bind f2:ctrl;alt;cmd layout two-monitors

# Autoswitching
default                 one-monitor   resolutions:${internal}
default                 two-monitors  resolutions:${internal};${cinema}
