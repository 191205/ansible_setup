config defaultToCurrentScreen true

# Monitor Aliases
alias internal          1440x900
alias external          1920x1200
alias grotto            1080x1920

# App Aliases
alias adium             'Adium':IGNORE_FAIL,TITLE_ORDER_REGEX=Contact,REPEAT_LAST
alias chrome            'Google Chrome':REPEAT_LAST
alias canary            'Google Chrome Canary':REPEAT_LAST
alias term              'iTerm':REPEAT_LAST
alias propane           'Propane'
alias skype             'Skype'

# Position Aliases
alias full              move                    screenOriginX;screenOriginY screenSizeX;screenSizeY

# halves
alias top               push up                 bar-resize:screenSizeY/2
alias right             push right              bar-resize:screenSizeX/2
alias bottom            push down               bar-resize:screenSizeY/2
alias left              push left               bar-resize:screenSizeX/2

# thirds
alias small-top         push up                 bar-resize:screenSizeY/3
alias small-right       push right              bar-resize:screenSizeX/3
alias small-bottom      push down               bar-resize:screenSizeY/3
alias small-left        push left               bar-resize:screenSizeX/3

# two thirds
alias big-top           push up                 bar-resize:2*screenSizeY/3
alias big-right         push right              bar-resize:2*screenSizeX/3
alias big-bottom        push down               bar-resize:2*screenSizeY/3
alias big-left          push left               bar-resize:2*screenSizeX/3

# corners
alias top-right         corner top-right        resize:screenSizeX/2;screenSizeY/2
alias bottom-right      corner bottom-right     resize:screenSizeX/2;screenSizeY/2
alias bottom-left       corner bottom-left      resize:screenSizeX/2;screenSizeY/2
alias top-left          corner top-left         resize:screenSizeX/2;screenSizeY/2

# centered
alias small-center      move                    screenOriginX+screenSizeX/3;screenOriginY+screenSizeY/3 screenSizeX/3;screenSizeY/3
alias big-center        move                    screenOriginX+screenSizeX/4;screenOriginY+screenSizeY/4 screenSizeX/2;screenSizeY/2

# Move Bindings
bind                    down:ctrl;alt;cmd       chain ${full} | ${full} next
bind                    pad5:ctrl;alt           chain ${small-center} | ${small-center} next
bind                    pad5:ctrl;alt;cmd       chain ${big-center} | ${big-center} next

# Push Bindings
bind                    up:ctrl;alt             chain ${top} | ${top} next
bind                    right:ctrl;alt          chain ${right} | ${right} next
bind                    down:ctrl;alt           chain ${bottom} | ${bottom} next
bind                    left:ctrl;alt           chain ${left} | ${left} next
bind                    pad8:ctrl;alt           chain ${small-top} | ${small-top} next
bind                    pad6:ctrl;alt           chain ${small-right} | ${small-right} next
bind                    pad2:ctrl;alt           chain ${small-bottom} | ${small-bottom} next
bind                    pad4:ctrl;alt           chain ${small-left} | ${small-left} next
bind                    pad8:ctrl;alt;cmd       chain ${big-top} | ${big-top} next
bind                    pad6:ctrl;alt;cmd       chain ${big-right} | ${big-right} next
bind                    pad2:ctrl;alt;cmd       chain ${big-bottom} | ${big-bottom} next
bind                    pad4:ctrl;alt;cmd       chain ${big-left} | ${big-left} next

# Corner Bindings
bind                    pad1:ctrl;alt           chain ${bottom-left} | ${bottom-left} next
bind                    pad3:ctrl;alt           chain ${bottom-right} | ${bottom-right} next
bind                    pad7:ctrl;alt           chain ${top-left} | ${top-left} next
bind                    pad9:ctrl;alt           chain ${top-right} | ${top-right} next

# Layouts
layout                  one-monitor             ${adium}    throw ${internal} | ${small-center} ${internal}
layout                  one-monitor             ${chrome}   ${full} ${internal}
layout                  one-monitor             ${canary}   ${full} ${internal}
layout                  one-monitor             ${term}     ${full} ${internal}
layout                  one-monitor             ${propane}  ${left} ${internal}
layout                  one-monitor             ${skype}    ${right} ${internal}

layout                  two-monitors            ${adium}    throw ${external} | ${big-center} ${external}
layout                  two-monitors            ${chrome}   ${full} ${external}
layout                  two-monitors            ${canary}   ${full} ${external}
layout                  two-monitors            ${term}     ${full} ${external}
layout                  two-monitors            ${propane}  ${left} ${internal}
layout                  two-monitors            ${skype}    ${right} ${internal}

layout                  two-monitors-grotto     ${adium}    throw ${internal} | ${big-center} ${internal}
layout                  two-monitors-grotto     ${chrome}   ${full} ${external}
layout                  two-monitors-grotto     ${canary}   ${full} ${external}
layout                  two-monitors-grotto     ${term}     ${full} ${internal}
layout                  two-monitors-grotto     ${propane}  ${left} ${internal}
layout                  two-monitors-grotto     ${skype}    ${right} ${internal}

# for testing layouts
# bind f1:ctrl;alt;cmd layout one-monitor
# bind f2:ctrl;alt;cmd layout two-monitors
# bind f3:ctrl;alt;cmd layout two-monitors-grotto

# Autoswitching
default                 one-monitor             resolutions:${internal}
default                 two-monitors            resolutions:${internal};${external}
default                 two-monitors-grotto     resolutions:${internal};${grotto}
